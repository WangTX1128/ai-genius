# AI-Genius Configuration File
# Copy this file to .env and update with your actual values

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose your LLM provider: openai or alibaba
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_MODEL=gpt-4o
OPENAI_API_KEY=your-openai-api-key-here
# Optional: Custom OpenAI-compatible endpoint
# OPENAI_BASE_URL=https://api.openai.com/v1

# Alibaba Cloud Configuration (when LLM_PROVIDER=alibaba)
ALIBABA_ENDPOINT=https://dashscope.aliyuncs.com/compatible-mode/v1
ALIBABA_API_KEY=your-alibaba-api-key-here
ALIBABA_MODEL=qwen-max

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=127.0.0.1
SERVER_PORT=5000
DEBUG_MODE=false

# =============================================================================
# Browser Configuration
# =============================================================================
HEADLESS_MODE=false
WINDOW_WIDTH=1280
WINDOW_HEIGHT=720
# Optional: Custom Chrome/Chromium path
# CHROME_PATH=/usr/bin/chromium-browser
# Optional: Custom User Agent
# USER_AGENT=Mozilla/5.0 (Your Custom User Agent)
# Optional: Recording path for browser sessions
# RECORDING_PATH=./recordings

# =============================================================================
# Task Execution Configuration
# =============================================================================
MAX_STEPS=100
USE_VISION=true
MAX_ACTIONS_PER_STEP=10

# =============================================================================
# Examples for different configurations:
# =============================================================================

# Example 1: Using OpenAI with default settings
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_MODEL=gpt-4o

# Example 2: Using Alibaba Cloud (Qwen)
# LLM_PROVIDER=alibaba  
# ALIBABA_API_KEY=your-alibaba-key
# ALIBABA_MODEL=qwen-max
# ALIBABA_ENDPOINT=https://dashscope.aliyuncs.com/compatible-mode/v1

# Example 3: Using custom OpenAI-compatible endpoint
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your-custom-key
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1
# OPENAI_MODEL=your-model-name

# Example 4: Production server configuration
# SERVER_HOST=0.0.0.0
# SERVER_PORT=8080
# HEADLESS_MODE=true
# DEBUG_MODE=false
